{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
<div class="container py-5" style="max-width:480px;">
    <h2 class="mb-4">Вход в личный кабинет</h2>
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : 'info' }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}
    <form method="post" action="{{ path('app_login') }}">
        <div class="mb-3">
            <label class="form-label">Номер телефона</label>
            <input type="tel" name="phone" class="form-control" placeholder="+7 900 000-00-00" required>
        </div>
        <button class="btn btn-primary w-100" type="submit">Получить код</button>
    </form>
</div>
{% endblock %}
